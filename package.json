    "nlf": "^1.4.2",
    "rollup": "^0.52.3",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.15.0",
    "tape": "^4.5.1"
  },
