{
  "name": "@ephox/bedrock",
  "version": "8.1.1",
  "description": "NodeJS test runner",
  "repository": {
    "type": "git",
    "url": "https://github.com/ephox/bedrock"
  },
  "scripts": {
    "lint": "yarn eslint 'modules/client/**/*.ts' 'modules/runner/**/*.ts' 'modules/server/**/*.ts'",
    "prepublishOnly": "yarn build",
    "clean": "git clean -dfx lib dist",
    "build-client": "tsc -p modules/client/tsconfig.json",
    "build-runner": "tsc -p modules/runner/tsconfig.json && rollup --config",
    "build-server": "tsc -p modules/server/tsconfig.json",
    "build": "yarn lint && yarn build-client && yarn build-runner && yarn build-server",
    "test-client": "mocha -r esm lib/client/test/**/*Test.js",
    "test-runner": "mocha -r esm lib/runner/test/**/*Test.js",
    "test-server": "mocha -r esm lib/server/test/**/*Test.js",
    "test-samples-pass": "bin/bedrock-auto.js -b phantomjs --config sample/tsconfig.json --files sample/ts/**/*PassTest.ts sample/ts/**/*PassTest.tsx",
    "test-samples-fail": "bin/bedrock-auto.js -b phantomjs --config sample/tsconfig.json --files sample/ts/**/*FailTest.ts",
    "test": "yarn build && yarn test-client && yarn test-runner && yarn test-server && yarn test-samples-pass"
  },
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.2.0",
    "eslint": "^6.3.0",
    "eslint-config-google": "^0.14.0",
    "esm": "^3.2.25",
    "fast-check": "^1.17.0",
    "fast-deep-equal": "^2.0.1",
    "mocha": "^6.2.0",
    "typescript": "^3.3.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "author": "Tiny Technologies Inc",
  "license": "Apache-2.0",
  "files": []
}
