{
  "name": "@ephox/bedrock",
  "version": "8.0.2",
  "description": "NodeJS test runner",
  "repository": {
    "type": "git",
    "url": "https://github.com/ephox/bedrock"
  },
  "bin": {
    "bedrock-auto": "./bin/bedrock-auto.js",
    "bedrock-framework": "./bin/bedrock-framework.js",
    "bedrock": "./bin/bedrock.js"
  },
  "scripts": {
    "lint": "yarn eslint 'modules/client/**/*.ts' 'modules/runner/**/*.ts' 'modules/server/**/*.ts'",
    "prepublishOnly": "yarn build",
    "clean": "git clean -dfx lib dist",
    "build": "yarn lint && tsc -p modules/client/tsconfig.json && tsc -p modules/runner/tsconfig.json && tsc -p modules/server/tsconfig.json && rollup --config",
    "test-client": "mocha -r esm lib/client/test/**/*Test.js",
    "test-runner": "mocha -r esm lib/runner/test/**/*Test.js",
    "test-server": "mocha -r esm lib/server/test/**/*Test.js",
    "test-atomic": "tape test/atomic/*.js",
    "test-props": "tape test/props/*.js",
    "test-samples-pass": "bin/bedrock-auto.js -b phantomjs --config sample/tsconfig.json --files sample/ts/**/*PassTest.ts sample/ts/**/*PassTest.tsx",
    "test-samples-fail": "bin/bedrock-auto.js -b phantomjs --config sample/tsconfig.json --files sample/ts/**/*FailTest.ts",
    "test": "yarn build && yarn test-client && yarn test-runner && yarn test-server && yarn test-atomic && yarn test-props && yarn test-samples-pass"
  },
  "private": false,
  "dependencies": {
    "async": "^1.5.2",
    "babel-polyfill": "^6.23.0",
    "command-line-args": "^5.0.0",
    "command-line-usage": "^5.0.1",
    "cross-spawn": "^7.0.0",
    "finalhandler": "^1.1.2",
    "fork-ts-checker-webpack-plugin": "~1.0.4",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jquery": "^3.4.1",
    "mkdirp": "^0.5.1",
    "node-glob": "^1.2.0",
    "portfinder": "1.0.21",
    "raw-loader": "^0.5.1",
    "recursive-readdir-sync": "^1.0.6",
    "rollup-plugin-typescript2": "^0.24.0",
    "serve-static": "^1.10.2",
    "source-map-loader": "^0.2.3",
    "ts-loader": "^5.3.3",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.3.0",
    "webdriverio": "5.13.1",
    "webpack": "^4.25.1",
    "webpack-dev-server": "^3.2.1",
    "xml-writer": "^1.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/cross-spawn": "^6.0.0",
    "@types/finalhandler": "^1.1.0",
    "@types/jquery": "^3.3.31",
    "@types/mkdirp": "^0.5.1",
    "@types/mocha": "^5.2.7",
    "@types/querystringify": "^2.0.0",
    "@types/tape": "^4.2.33",
    "@types/webpack": "^4.25.1",
    "@types/webpack-dev-server": "^3.1.7",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.2.0",
    "eslint": "^6.3.0",
    "eslint-config-google": "^0.13.0",
    "esm": "^3.2.25",
    "fast-check": "^1.17.0",
    "fast-deep-equal": "^2.0.1",
    "grunt": "^1.0.1",
    "jscheck": "^0.2.0",
    "jsverify": "^0.7.1",
    "load-grunt-tasks": "^3.5.0",
    "mocha": "^6.2.0",
    "nlf": "^1.4.2",
    "rollup": "^1.20.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "tape": "^4.5.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "author": "Ephox Corporation",
  "license": "Apache-2.0",
  "main": "./lib/client/main/ts/api/Main.js",
  "module": "./lib/client/main/ts/api/Main.js",
  "types": "./lib/client/main/ts/api/Main.d.ts",
  "files": [
    "bin/**",
    "lib/**",
    "dist/**",
    "src/**",
    "tasks/**"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
