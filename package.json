{
  "name": "@ephox/bedrock",
  "version": "4.0.0",
  "description": "NodeJS test runner",
  "repository": {
    "type": "git",
    "url": "https://github.com/ephox/bedrock"
  },
  "bin": {
    "bedrock-auto": "./bin/bedrock-auto.js",
    "bedrock-repl": "./bin/bedrock-repl.js",
    "bedrock-framework": "./bin/bedrock-framework.js",
    "bedrock": "./bin/bedrock.js"
  },
  "scripts": {
    "prepublishOnly": "tsc",
    "build": "tsc",
    "test-atomic": "tape test/atomic/*.js",
    "test-props": "tape test/props/*.js",
    "test-samples": "bin/bedrock-auto.js -b phantomjs --config sample/config.js --files sample/AsyncPassTest.ts sample/IFrameTest.ts sample/TabbingTest.ts",
    "test": "npm run test-atomic && npm run test-props && npm run test-samples"
  },
  "private": false,
  "dependencies": {
    "@ephox/bolt": "^1.6.5",
    "async": "^1.5.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-polyfill": "^6.23.0",
    "command-line-args": "^3.0.0",
    "command-line-usage": "^3.0.1",
    "finalhandler": "^0.4.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jquery": "^3.0.0",
    "mkdirp": "^0.5.1",
    "openport": "0.0.4",
    "raw-loader": "^0.5.1",
    "recursive-readdir-sync": "^1.0.6",
    "selenium-webdriver": "^3",
    "serve-static": "^1.10.2",
    "source-map-loader": "^0.2.3",
    "typescript": "^3.1.6",
    "webpack": "^4.25.1",
    "webpack-dev-server": "^3.1.10",
    "xml-writer": "^1.6.0"
  },
  "devDependencies": {
    "eslint": "^2.9.0",
